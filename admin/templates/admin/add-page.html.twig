{% extends 'admin.html.twig' %}

{% block title %}Ajouter une nouvelle page{% endblock %}

{% block body %}

<section class="bloc1">
    <h2>Ajouter une nouvelle page</h2>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#content-page">Contenu</a></li>
        <li><a href="#content-seo">SEO</a></li>
    </ul>
    {{ form_start(form) }}
        <div id="content-page" class="tab-pane active">
            {{ form_row(form.page_title) }}
            {{ form_row(form.page_url) }}
            {{ form_row(form.page_content) }}
        </div>
        <div id="content-seo" class="tab-pane">
            {{ form_row(form.page_meta_title) }}
            {{ form_row(form.page_meta_desc) }}
        </div>
        {{ form_row(form.page_submit) }}
    {{ form_end(form) }}
</section>

{% endblock %}